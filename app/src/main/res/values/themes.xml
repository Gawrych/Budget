<resources>
    <!-- Base application theme. -->
    <style name="BudgetManagement" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/first_color_theme</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/second_color_theme</item>
        <item name="colorSecondaryVariant">@color/second_color_theme</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/first_color_theme</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="titleTextColor">@color/black</item>
        <item name="background">@color/white</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_round_top</item>
    </style>

<!--    Global -->

    <style name="scrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/first_color_theme</item>
    </style>

    <style name="topBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/first_color_theme</item>
    </style>

    <style name="topBarIcon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:background">@drawable/image_view_pressed_background</item>
        <item name="tint">@color/white</item>
        <item name="buttonTint">@color/white</item>
    </style>

    <!--    transaction form fragment/add new transactions -->

    <style name="addButton">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">70dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:backgroundTint">@color/first_color_theme</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:text">@string/add</item>
        <item name="android:layout_gravity">center</item>
        <item name="cornerRadius">12dp</item>
        <item name="iconGravity">start</item>
        <item name="iconTint">@color/grey</item>
    </style>

    <style name="TextInputLayoutCustomView"
        parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="hintTextColor">@color/first_color_theme</item>
        <item name="boxStrokeColor">@color/first_color_theme</item>
        <item name="errorEnabled">true</item>
        <item name="endIconMode">custom</item>
        <item name="endIconContentDescription">@string/icon</item>
    </style>

    <style name="LayoutExposedDropMenuCustomView"
        parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="hintTextColor">@color/first_color_theme</item>
        <item name="boxStrokeColor">@color/first_color_theme</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="TextInputEditTextCustomView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="AutoCompleteCustomView" parent="TextInputEditTextCustomView">
        <item name="android:focusable">false</item>
    </style>

    <style name="SwitchMaterialTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/first_color_theme</item>
    </style>

    <style name="SwitchMaterialCustomView" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/first_color_theme</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>

    <style name="DetailsLabelField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DetailsValueFieldBasicSet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DetailsValueField" parent="DetailsValueFieldBasicSet">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:text">@string/no_data</item>
    </style>

    <style name="DetailsIconField">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style name="DetailsButtonLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="DetailsIconButtonField">
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

    <style name="DetailsLabelButtonField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
    </style>

<!--    Fragment period comparator -->

    <style name="chartLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="chartDetailsLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/rounded_top_left_corner_white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
    </style>

    <style name="detailsItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/round_all_corners</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>


    <style name="detailsItemIcon">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/icon_background</item>
        <item name="android:backgroundTint">@color/mat_green</item>
        <item name="tint">@color/indigo</item>
        <item name="android:padding">7dp</item>
    </style>

    <style name="detailsItemLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_accent</item>
    </style>

    <style name="detailsItemData">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_accent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detailsItemExtraData">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>