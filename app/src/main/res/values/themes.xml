<resources>
    <!-- Base application theme. -->
    <style name="BudgetManagement" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/first_color_theme</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/second_color_theme</item>
        <item name="colorSecondaryVariant">@color/second_color_theme</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/first_color_theme</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="titleTextColor">@color/black</item>
        <item name="background">@color/white</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_round_top</item>
    </style>

<!--    Global -->

    <style name="scrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/first_color_theme</item>
    </style>

    <style name="topBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/first_color_theme</item>
    </style>

    <style name="topBarIcon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:background">@drawable/image_view_pressed_background</item>
        <item name="tint">@color/white</item>
        <item name="buttonTint">@color/white</item>
    </style>

    <style name="yearSelector">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="drawableEndCompat">@drawable/ic_baseline_arrow_drop_down_24</item>
        <item name="drawableTint">@color/white</item>


    </style>

    <!--    transaction form fragment/add new transactions -->

    <style name="addButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:background">@color/second_color_theme</item>
        <item name="backgroundTint">@color/second_color_theme</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:text">@string/add</item>
    </style>

    <style name="cyclicalTransactionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/black_10</item>
    </style>

    <style name="TextInputLayoutCustomView"
        parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="hintTextColor">@color/first_color_theme</item>
        <item name="boxStrokeColor">@color/first_color_theme</item>
        <item name="errorEnabled">true</item>
        <item name="endIconMode">custom</item>
        <item name="endIconContentDescription">@string/icon</item>
    </style>

    <style name="LayoutExposedDropMenuCustomView"
        parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="hintTextColor">@color/first_color_theme</item>
        <item name="boxStrokeColor">@color/first_color_theme</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="TextInputEditTextCustomView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="AutoCompleteCustomView" parent="TextInputEditTextCustomView">
        <item name="android:focusable">false</item>
    </style>

    <style name="SwitchMaterialTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/first_color_theme</item>
    </style>

    <style name="SwitchMaterialCustomView" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/first_color_theme</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>

    <style name="ExecutedOutstanding">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mat_green</item>
        <item name="android:backgroundTint">@color/mat_green_10</item>
        <item name="android:background">@drawable/icon_background</item>
        <item name="android:text">@string/executed</item>
    </style>

    <style name="DetailsLabelField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DetailsValueFieldBasicSet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DetailsValueField" parent="DetailsValueFieldBasicSet">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:text">@string/no_data</item>
    </style>

    <!--    Fragment period comparator -->

    <style name="chartLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>

    <style name="chartDetailsLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:background">@color/black_10</item>
    </style>

    <style name="detailsItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">95dp</item>
        <item name="android:background">@drawable/bottom_line</item>
        <item name="android:backgroundTint">@color/grey</item>
    </style>

    <style name="detailsItemIcon">
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:background">@drawable/icon_background</item>
        <item name="android:backgroundTint">@color/mat_green</item>
        <item name="tint">@color/indigo</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="detailsItemLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_accent</item>
    </style>

    <style name="detailsItemData">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_accent</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detailsItemExtraData">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_accent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detailsItemExtraDataWithIcon" parent="detailsItemExtraData">
        <item name="drawableEndCompat">@drawable/ic_baseline_keyboard_arrow_right_24</item>
        <item name="drawableTint">@color/dark_grey</item>
        <item name="android:gravity">center</item>
    </style>

<!--    Coming child view -->

    <style name="categoryIcon">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="tint">@color/white</item>
        <item name="android:padding">9dp</item>
    </style>

<!--    Statistics fragment -->

    <style name="globalStatsTile">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:elevation">7dp</item>
        <item name="android:background">@drawable/statistics_global_stats_round_corners</item>
    </style>

    <style name="globalStatsSmallTile" parent="globalStatsTile">
        <item name="android:layout_height">90dp</item>
    </style>

    <style name="globalStatsAmount">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:text">@string/number_example</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/round_all_corners</item>
    </style>

    <style name="globalStatsAmountPositive" parent="globalStatsAmount">
        <item name="android:textColor">@color/mat_green</item>
        <item name="android:backgroundTint">@color/mat_green_05</item>
    </style>

    <style name="globalStatsAmountNegative" parent="globalStatsAmount">
        <item name="android:textColor">@color/mat_red</item>
        <item name="android:backgroundTint">@color/mat_red_05</item>
    </style>

    <style name="globalStatsLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="globalStatsRemainingDays">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="globalStatsIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/icon_background</item>
    </style>

    <style name="globalStatsIconPositive" parent="globalStatsIcon">
        <item name="tint">@color/mat_green</item>
        <item name="android:src">@drawable/ic_baseline_arrow_drop_up_24</item>
        <item name="android:backgroundTint">@color/mat_green_30</item>
    </style>

    <style name="globalStatsIconNegative" parent="globalStatsIcon">
        <item name="tint">@color/mat_red</item>
        <item name="android:src">@drawable/ic_baseline_arrow_drop_down_24</item>
        <item name="android:backgroundTint">@color/mat_red_30</item>
    </style>


    <style name="statisticFragmentCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">190dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="cardCornerRadius">30dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="statisticFragmentCardLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="statisticFragmentCardLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">7dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_accent</item>
    </style>

    <style name="statisticFragmentCardIcon">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/oval_background</item>
        <item name="android:backgroundTint">@color/background</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="statisticFragmentCardCheckArrow">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/icon_background</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:src">@drawable/ic_baseline_keyboard_arrow_right_24</item>
    </style>

<!--    BottomSheet -->

    <style name="bottomSheetLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="bottomSheetItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="bottomSheetItemLayoutWide" parent="bottomSheetItemLayout">
        <item name="android:layout_height">75dp</item>
        <item name="android:paddingStart">30dp</item>
    </style>

    <style name="bottomSheetTextViewItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:drawablePadding">30sp</item>
        <item name="android:drawableTint">@color/font_default</item>
    </style>
</resources>