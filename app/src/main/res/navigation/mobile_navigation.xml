<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_statistics">

    <fragment
        android:id="@+id/navigation_statistics"
        android:name="com.example.budgetmanagement.ui.Statistics.StatisticsFragment"
        android:label="@string/title_statistics"
        tools:layout="@layout/statistics_fragment" />
    <fragment
        android:id="@+id/navigation_category"
        android:name="com.example.budgetmanagement.ui.Category.CategoryFragment"
        android:label="@string/title_category"
        tools:layout="@layout/category_fragment" />
    <fragment
        android:id="@+id/navigation_history"
        android:name="com.example.budgetmanagement.ui.History.HistoryFragment"
        android:label="@string/title_history"
        tools:layout="@layout/history_fragment" >
        <action
            android:id="@+id/action_navigation_history_to_addNewHistory"
            app:destination="@id/addNewHistory" />
    </fragment>
    <fragment
        android:id="@+id/navigation_incoming"
        android:name="com.example.budgetmanagement.ui.Coming.ComingFragment"
        android:label="@string/title_incoming"
        tools:layout="@layout/coming_fragment" />
    <fragment
        android:id="@+id/addNewHistory"
        android:name="com.example.budgetmanagement.ui.History.AddNewElementToHistory"
        android:label="activity_add_new_history"
        tools:layout="@layout/add_new_history_fragment" >
        <action
            android:id="@+id/action_addNewHistory_to_navigation_history"
            app:destination="@id/navigation_history" />
    </fragment>
</navigation>