<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainLayout"
    tools:context=".ui.statistics.PeriodComparatorStatisticsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/waveBackground"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/first_color_theme"
        android:elevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioGroup
            android:id="@+id/periodOfTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:padding="5dp"
            android:orientation="horizontal"
            android:background="@drawable/buttons_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/yearPicker"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/yearButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_selector"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Rok"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/monthsButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/button_selector"
                android:button="@android:color/transparent"
                android:checked="true"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Miesiąc"
                android:textSize="16sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/yearPicker"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="2022"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:drawableEndCompat="@drawable/ic_baseline_arrow_drop_down_24"
            app:drawableTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/periodOfTime"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/chartLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/periodStatsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:elevation="20dp">

        <TextView
            android:id="@+id/allTransactionNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:ellipsize="end"
            android:labelFor="@+id/allTransactionNumber"
            android:maxLines="1"
            android:text="Transakcji"
            android:textColor="@color/dark_grey"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/numberOfTransactionsExecutedAfterTheTimeLabel"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/allTransactionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/allTransactionNumberLabel"
            app:layout_constraintTop_toBottomOf="@+id/allTransactionNumberLabel" />

        <TextView
            android:id="@+id/numberOfTransactionsExecutedAfterTheTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:labelFor="@+id/outstandingTransactionNumber"
            android:maxLines="1"
            android:text="Po terminie"
            android:textColor="@color/dark_grey"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/numberOfRemainingTransactionLabel"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/allTransactionNumberLabel"
            app:layout_constraintTop_toTopOf="@+id/allTransactionNumberLabel" />

        <TextView
            android:id="@+id/numberOfTransactionsExecutedAfterTheTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/numberOfTransactionsExecutedAfterTheTimeLabel"
            app:layout_constraintTop_toBottomOf="@+id/numberOfTransactionsExecutedAfterTheTimeLabel" />

        <TextView
            android:id="@+id/numberOfRemainingTransactionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:ellipsize="end"
            android:labelFor="@+id/executedTransactionNumber"
            android:maxLines="1"
            android:text="Pozostało"
            android:textColor="@color/dark_grey"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/numberOfTransactionsExecutedAfterTheTimeLabel"
            app:layout_constraintTop_toTopOf="@+id/allTransactionNumberLabel" />

        <TextView
            android:id="@+id/numberOfRemainingTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/numberOfRemainingTransactionLabel"
            app:layout_constraintTop_toBottomOf="@+id/numberOfRemainingTransactionLabel" />

        <TextView
            android:id="@+id/averageTimeAfterTheDeadlineLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:ellipsize="end"
            android:labelFor="@+id/executedTransactionNumber"
            android:maxLines="1"
            android:text="Średnio po terminie"
            android:textColor="@color/dark_grey"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/payOnTimeLabel"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numberOfRemainingTransaction" />

        <TextView
            android:id="@+id/averageTimeAfterTheDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 dni"
            android:textSize="22sp"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/ic_baseline_arrow_drop_down_24"
            app:drawableTint="@color/mat_green"
            app:layout_constraintStart_toStartOf="@+id/averageTimeAfterTheDeadlineLabel"
            app:layout_constraintTop_toBottomOf="@+id/averageTimeAfterTheDeadlineLabel" />

        <TextView
            android:id="@+id/globalAverageTimeAfterTheDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 dni"
            android:textColor="@color/dark_grey"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/averageTimeAfterTheDeadlineLabel"
            app:layout_constraintTop_toBottomOf="@+id/averageTimeAfterTheDeadline" />

        <TextView
            android:id="@+id/payOnTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:ellipsize="end"
            android:labelFor="@+id/executedTransactionNumber"
            android:maxLines="1"
            android:text="Zapłacone w terminie"
            android:textColor="@color/dark_grey"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/averageTimeAfterTheDeadlineLabel"
            app:layout_constraintTop_toTopOf="@+id/averageTimeAfterTheDeadlineLabel" />

        <TextView
            android:id="@+id/averagePercentPayOnTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22%"
            android:textColor="@color/mat_green"
            android:textSize="22sp"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/ic_baseline_arrow_drop_up_24"
            app:drawableTint="@color/mat_green"
            app:layout_constraintStart_toStartOf="@+id/payOnTimeLabel"
            app:layout_constraintTop_toBottomOf="@+id/payOnTimeLabel" />

        <TextView
            android:id="@+id/globalAveragePercentPayOnTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18%"
            android:textColor="@color/dark_grey"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/averagePercentPayOnTime"
            app:layout_constraintTop_toBottomOf="@+id/averagePercentPayOnTime" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>