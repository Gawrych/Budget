<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ui.statistics.PeriodComparatorFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tobBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/first_color_theme"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/swapPeriods"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/press_feedback_background"
                android:contentDescription="@string/icon"
                android:layout_marginEnd="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/selectDate"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_compare_arrows_24"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/selectDate"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/press_feedback_background"
                android:padding="6dp"
                android:contentDescription="@string/selectDateToCompare"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_baseline_edit_calendar_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/onlyYearCheckBox"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <CheckBox
                android:id="@+id/onlyYearCheckBox"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:background="@drawable/icon_background"
                android:backgroundTint="@color/first_color_theme"
                android:button="@drawable/date_picker_selector"
                android:buttonTint="@color/white"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_top_left_corner_blue_white"
            app:layout_constraintTop_toBottomOf="@+id/tobBar">

            <LinearLayout
                android:id="@+id/chartLayout"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/periodStatsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_top_left_corner_white"
                android:orientation="vertical"
                android:paddingStart="30dp"
                android:paddingTop="40dp"
                android:paddingEnd="30dp"
                app:layout_constraintTop_toBottomOf="@+id/chartLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/round_all_corners"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/incomeIncreaseLabelIcon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/icon_background"
                        android:backgroundTint="@color/mat_green"
                        android:contentDescription="@string/transaction_icon_desc"
                        android:padding="1dp"
                        android:src="@drawable/ic_baseline_arrow_drop_up_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/indigo" />

                    <TextView
                        android:id="@+id/incomeIncreaseLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:labelFor="@+id/allTransactionNumber"
                        android:text="Przychody"
                        android:textColor="@color/mat_green"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/amountOfIncomeIncrease"
                        app:layout_constraintStart_toEndOf="@+id/incomeIncreaseLabelIcon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/amountOfIncomeIncrease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+1200"
                        android:textColor="@color/dark_grey"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/incomeIncreaseLabel"
                        app:layout_constraintTop_toBottomOf="@+id/incomeIncreaseLabel" />

                    <TextView
                        android:id="@+id/incomeIncrease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="52%"
                        android:textColor="#2c2f42"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_all_corners"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/numberOfRemainingTransactionIcon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/icon_background"
                        android:backgroundTint="@color/mat_red"
                        android:contentDescription="@string/transaction_icon_desc"
                        android:padding="1dp"
                        android:src="@drawable/ic_baseline_arrow_drop_down_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/indigo" />

                    <TextView
                        android:id="@+id/lossIncreaseLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:labelFor="@+id/allTransactionNumber"
                        android:text="Zobowiązania"
                        android:textColor="@color/mat_red"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/amountOfLossIncrease"
                        app:layout_constraintStart_toEndOf="@+id/numberOfRemainingTransactionIcon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.5"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/amountOfLossIncrease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+1200"
                        android:textColor="@color/dark_grey"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/lossIncreaseLabel"
                        app:layout_constraintTop_toBottomOf="@+id/lossIncreaseLabel"
                        app:layout_constraintVertical_bias="0.5" />

                    <TextView
                        android:id="@+id/lossIncrease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="59%"
                        android:textColor="#2c2f42"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_all_corners"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/profitIncreaseIcon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/icon_background"
                        android:backgroundTint="@color/mat_blue"
                        android:contentDescription="@string/transaction_icon_desc"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_attach_money_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/indigo" />

                    <TextView
                        android:id="@+id/profitIncreaseLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:labelFor="@+id/allTransactionNumber"
                        android:text="Dochody"
                        android:textColor="@color/mat_blue"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/amountOfProfitIncrease"
                        app:layout_constraintStart_toEndOf="@+id/profitIncreaseIcon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/amountOfProfitIncrease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+1200"
                        android:textColor="@color/dark_grey"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/profitIncreaseLabel"
                        app:layout_constraintTop_toBottomOf="@+id/profitIncreaseLabel" />

                    <TextView
                        android:id="@+id/profitIncrease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15%"
                        android:textColor="#2c2f42"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_all_corners"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/averageTimeAfterTheDeadlineIcon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/icon_background"
                        android:backgroundTint="#ffb300"
                        android:contentDescription="@string/transaction_icon_desc"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_access_time_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/indigo" />

                    <TextView
                        android:id="@+id/averageTimeAfterTheDeadlineLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:labelFor="@+id/allTransactionNumber"
                        android:text="Średnio po terminie"
                        android:textColor="#2c2f42"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/globalAverageTimeAfterTheDeadline"
                        app:layout_constraintStart_toEndOf="@+id/averageTimeAfterTheDeadlineIcon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/globalAverageTimeAfterTheDeadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 - 3 dni"
                        android:textColor="@color/dark_grey"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/averageTimeAfterTheDeadlineLabel"
                        app:layout_constraintTop_toBottomOf="@+id/averageTimeAfterTheDeadlineLabel" />

                    <TextView
                        android:id="@+id/averageTimeAfterTheDeadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+5 dni"
                        android:textColor="#2c2f42"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_all_corners"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/payOnTimeIcon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/icon_background"
                        android:backgroundTint="@color/mat_green"
                        android:contentDescription="@string/transaction_icon_desc"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_done_all_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/indigo" />

                    <TextView
                        android:id="@+id/payOnTimeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:labelFor="@+id/allTransactionNumber"
                        android:text="Zapłacone w terminie"
                        android:textColor="#2c2f42"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/globalAveragePercentPayOnTime"
                        app:layout_constraintStart_toEndOf="@+id/payOnTimeIcon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/globalAveragePercentPayOnTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+1200"
                        android:textColor="@color/dark_grey"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/payOnTimeLabel"
                        app:layout_constraintTop_toBottomOf="@+id/payOnTimeLabel" />

                    <TextView
                        android:id="@+id/averagePercentPayOnTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22%"
                        android:textColor="#2c2f42"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>