<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f8f8fa"
        tools:context=".ui.statistics.PeriodComparatorFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/monthsSelector"
            android:layout_width="270dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/right_corner_radius"
            android:elevation="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/firstDateLabel"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:background="@drawable/bottom_line"
                android:elevation="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/firstDateMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Grudzień"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:drawableTint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/firstDateYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="2022"
                    android:textColor="@color/grey"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:drawableTint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/icon"
                android:layout_width="270dp"
                android:layout_height="110dp"
                android:elevation="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/selectDate"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/image_view_background"
                    android:padding="6dp"
                    android:src="@drawable/ic_baseline_calendar_month_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/first_color_theme" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/secondDateLabel"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:elevation="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/secondDateMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="Grudzień"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:drawableTint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/secondDateYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="2022"
                    android:textColor="@color/grey"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:drawableTint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <CheckBox
            android:id="@+id/onlyYearCheckBox"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/button_selector"
            android:button="@android:color/transparent"
            android:text="Rok"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/monthsSelector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/monthsSelector"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/chartLayout"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            app:layout_constraintTop_toBottomOf="@+id/monthsSelector">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/periodStatsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/chartLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/round_all_corners"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:id="@+id/incomeIncreaseLabelIcon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:contentDescription="@string/transaction_icon_desc"
                    android:padding="1dp"
                    android:src="@drawable/ic_baseline_arrow_drop_up_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/incomeIncreaseLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:labelFor="@+id/allTransactionNumber"
                    android:text="Przychody"
                    android:textColor="@color/mat_green"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/amountOfIncomeIncrease"
                    app:layout_constraintStart_toEndOf="@+id/incomeIncreaseLabelIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/amountOfIncomeIncrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1200"
                    android:textColor="@color/dark_grey"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/incomeIncreaseLabel"
                    app:layout_constraintTop_toBottomOf="@+id/incomeIncreaseLabel" />

                <TextView
                    android:id="@+id/incomeIncrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="52%"
                    android:textColor="#2c2f42"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_all_corners"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:id="@+id/numberOfRemainingTransactionIcon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:contentDescription="@string/transaction_icon_desc"
                    android:padding="1dp"
                    android:src="@drawable/ic_baseline_arrow_drop_down_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#2c2f42" />

                <TextView
                    android:id="@+id/lossIncreaseLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:labelFor="@+id/allTransactionNumber"
                    android:text="Zobowiązania"
                    android:textColor="@color/mat_red"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/amountOfLossIncrease"
                    app:layout_constraintStart_toEndOf="@+id/numberOfRemainingTransactionIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/amountOfLossIncrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1200"
                    android:textColor="@color/dark_grey"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/lossIncreaseLabel"
                    app:layout_constraintTop_toBottomOf="@+id/lossIncreaseLabel"
                    app:layout_constraintVertical_bias="0.5" />

                <TextView
                    android:id="@+id/lossIncrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="59%"
                    android:textColor="#2c2f42"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_all_corners"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:id="@+id/profitIncreaseIcon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:contentDescription="@string/transaction_icon_desc"
                    android:padding="5dp"
                    android:src="@drawable/ic_baseline_attach_money_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#2c2f42" />

                <TextView
                    android:id="@+id/profitIncreaseLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:labelFor="@+id/allTransactionNumber"
                    android:text="Dochody"
                    android:textColor="@color/mat_blue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/amountOfProfitIncrease"
                    app:layout_constraintStart_toEndOf="@+id/profitIncreaseIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/amountOfProfitIncrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1200"
                    android:textColor="@color/dark_grey"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/profitIncreaseLabel"
                    app:layout_constraintTop_toBottomOf="@+id/profitIncreaseLabel" />

                <TextView
                    android:id="@+id/profitIncrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15%"
                    android:textColor="#2c2f42"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_all_corners"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:id="@+id/averageTimeAfterTheDeadlineIcon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:contentDescription="@string/transaction_icon_desc"
                    android:padding="5dp"
                    android:src="@drawable/ic_baseline_access_time_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#2c2f42" />

                <TextView
                    android:id="@+id/averageTimeAfterTheDeadlineLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:labelFor="@+id/allTransactionNumber"
                    android:text="Średnio po terminie"
                    android:textColor="#2c2f42"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/globalAverageTimeAfterTheDeadline"
                    app:layout_constraintStart_toEndOf="@+id/averageTimeAfterTheDeadlineIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/globalAverageTimeAfterTheDeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 - 3 dni"
                    android:textColor="@color/dark_grey"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/averageTimeAfterTheDeadlineLabel"
                    app:layout_constraintTop_toBottomOf="@+id/averageTimeAfterTheDeadlineLabel" />

                <TextView
                    android:id="@+id/averageTimeAfterTheDeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+5 dni"
                    android:textColor="#2c2f42"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/round_all_corners"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:id="@+id/payOnTimeIcon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:contentDescription="@string/transaction_icon_desc"
                    android:padding="4dp"
                    android:src="@drawable/ic_baseline_done_all_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#2c2f42" />

                <TextView
                    android:id="@+id/payOnTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:labelFor="@+id/allTransactionNumber"
                    android:text="Zapłacone w terminie"
                    android:textColor="#2c2f42"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/globalAveragePercentPayOnTime"
                    app:layout_constraintStart_toEndOf="@+id/payOnTimeIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/globalAveragePercentPayOnTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1200"
                    android:textColor="@color/dark_grey"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/payOnTimeLabel"
                    app:layout_constraintTop_toBottomOf="@+id/payOnTimeLabel" />

                <TextView
                    android:id="@+id/averagePercentPayOnTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22%"
                    android:textColor="#2c2f42"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>