<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View" />
        <variable name="comingDetails" type="com.example.budgetmanagement.ui.details.ComingDetails"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/detailsConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">

        <TextView
            android:id="@+id/transactionTitleLabel"
            style="@style/DetailsLabelField"
            android:labelFor="@+id/transactionName"
            android:text="@string/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/transactionName"
            style="@style/DetailsValueField"
            android:text="@{comingDetails.title}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transactionTitleLabel" />

        <TextView
            android:id="@+id/amountLabel"
            style="@style/DetailsLabelField"
            android:labelFor="@+id/amount"
            android:text="@string/amount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transactionName"/>

        <ImageView
            android:id="@+id/amountIcon"
            style="@style/DetailsIconField"
            android:contentDescription="@string/amount_icon"
            android:src="@{comingDetails.amountIcon}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amountLabel" />

        <TextView
            android:id="@+id/amount"
            style="@style/DetailsValueField"
            android:text="@{comingDetails.amount}"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/amountIcon"
            app:layout_constraintTop_toBottomOf="@+id/amountLabel" />

        <TextView
            android:id="@+id/currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="bottom|center_horizontal"
            android:text="@string/polish_currency"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/amount"
            app:layout_constraintStart_toEndOf="@+id/amount"
            app:layout_constraintTop_toTopOf="@+id/amount" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/categoryGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="categoryLabel, categoryIcon, categoryName" />

        <TextView
            android:id="@+id/categoryLabel"
            style="@style/DetailsLabelField"
            android:labelFor="@+id/categoryName"
            android:text="@string/category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amount"/>

        <ImageView
            android:id="@+id/categoryIcon"
            style="@style/DetailsIconField"
            android:src="@{comingDetails.icon}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categoryLabel"
            android:contentDescription="@string/category_icon" />

        <TextView
            android:id="@+id/categoryName"
            style="@style/DetailsValueField"
            android:layout_marginStart="10dp"
            android:text="@{comingDetails.categoryName}"
            app:layout_constraintStart_toEndOf="@+id/categoryIcon"
            app:layout_constraintTop_toBottomOf="@+id/categoryLabel" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/deadlineGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="repeatDateLabel, remainingDate,
            remainingDaysDecision, remainingDays, staticDaysText, dateWhenWasPaid" />

        <TextView
            android:id="@+id/repeatDateLabel"
            style="@style/DetailsLabelField"
            android:labelFor="@+id/remainingDate"
            android:text="@string/deadline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categoryIcon"/>

        <TextView
            android:id="@+id/remainingDate"
            style="@style/DetailsValueField"
            android:text="@{comingDetails.remainingDate}"
            android:textColor="@{context.getColor(comingDetails.textColorRes)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/repeatDateLabel" />

        <TextView
            android:id="@+id/remainingDaysDecision"
            style="@style/DetailsValueFieldBasicSet"
            android:layout_marginEnd="5dp"
            android:text="@{comingDetails.textRes}"
            android:textColor="@{context.getColor(comingDetails.textColorRes)}"
            android:labelFor="@+id/remainingDays"
            app:layout_constraintBottom_toBottomOf="@+id/remainingDate"
            app:layout_constraintEnd_toStartOf="@+id/remainingDays" />

        <TextView
            android:id="@+id/remainingDays"
            style="@style/DetailsValueFieldBasicSet"
            android:layout_marginEnd="5dp"
            android:text="@{comingDetails.remainingDayAmount}"
            android:textColor="@{context.getColor(comingDetails.textColorRes)}"
            android:visibility="@{comingDetails.mode == comingDetails.MODE_REALIZED ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="@+id/remainingDaysDecision"
            app:layout_constraintEnd_toStartOf="@+id/staticDaysText" />

        <TextView
            android:id="@+id/staticDaysText"
            style="@style/DetailsValueFieldBasicSet"
            android:layout_marginEnd="5dp"
            android:text="@string/days"
            android:textColor="@{context.getColor(comingDetails.textColorRes)}"
            android:visibility="@{comingDetails.mode == comingDetails.MODE_REALIZED ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="@+id/remainingDaysDecision"
            app:layout_constraintEnd_toStartOf="@+id/dateWhenWasPaid" />

        <TextView
            android:id="@+id/dateWhenWasPaid"
            style="@style/DetailsValueFieldBasicSet"
            android:text="@{comingDetails.executedDate}"
            android:textColor="@{context.getColor(comingDetails.textColorRes)}"
            android:visibility="@{comingDetails.mode == comingDetails.MODE_REALIZED ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/staticDaysText"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/createDateGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="addDateLabel, addDate" />

        <TextView
            android:id="@+id/addDateLabel"
            style="@style/DetailsLabelField"
            android:labelFor="@+id/addDate"
            android:text="@string/created_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/remainingDate" />

        <TextView
            android:id="@+id/addDate"
            style="@style/DetailsValueField"
            android:text="@{comingDetails.addDate}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addDateLabel" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/editDateGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="lastEditDateLabel, lastEditDate" />

        <TextView
            android:id="@+id/lastEditDateLabel"
            style="@style/DetailsLabelField"
            android:labelFor="@+id/lastEditDate"
            android:text="@string/last_modification"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addDate" />

        <TextView
            android:id="@+id/lastEditDate"
            style="@style/DetailsValueField"
            android:text="@{comingDetails.lastEditDate}"
            app:layout_constraintStart_toStartOf="@+id/lastEditDateLabel"
            app:layout_constraintTop_toBottomOf="@+id/lastEditDateLabel" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>