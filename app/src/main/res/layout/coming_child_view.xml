<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="88dp">

    <ImageView
        android:id="@+id/outOfDateIcon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="24dp"
        app:tint="@color/font_default"
        android:src="@drawable/ic_baseline_event_busy_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleLayout"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="13dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="5dp"
        android:gravity="center_vertical|bottom"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/default_item_title_value"
        android:textColor="#303030"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/amountLayout"
        app:layout_constraintStart_toEndOf="@+id/outOfDateIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:gravity="bottom"
        android:text="za"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/outOfDateIcon"
        app:layout_constraintTop_toBottomOf="@+id/titleLayout" />

    <TextView
        android:id="@+id/remainingDays"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:gravity="bottom"
        android:text="22"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/info"
        app:layout_constraintTop_toBottomOf="@+id/titleLayout" />

    <TextView
        android:id="@+id/daysText"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="bottom"
        android:paddingStart="5dp"
        android:text="dni"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/remainingDays"
        app:layout_constraintTop_toTopOf="@+id/remainingDays" />


    <TextView
        android:id="@+id/repeatDate"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="bottom"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="@string/default_date_in_item"
        android:textColor="@color/font_default"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleLayout" />

    <TextView
        android:id="@+id/amountLayout"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="13dp"
        android:gravity="bottom|end"
        android:text="@string/default_amount_value"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/currency"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currency"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:gravity="bottom|center_horizontal"
        android:layout_marginEnd="20dp"
        android:text="@string/polish_currency"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/amountLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>