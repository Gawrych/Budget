<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="@color/grey"
    android:paddingStart="20dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:gravity="center_vertical|bottom"
        android:text="@string/default_item_title_value"
        android:textColor="#303030"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/remainingDaysLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="bottom"
        android:text="PozostaÅ‚o:"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/remainingDays"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:gravity="bottom"
        android:text="22"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/remainingDaysLabel"
        app:layout_constraintTop_toTopOf="@+id/remainingDaysLabel" />

    <TextView
        android:id="@+id/daysText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="bottom"
        android:paddingStart="5dp"
        android:text="dni"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/remainingDays"
        app:layout_constraintTop_toTopOf="@+id/remainingDays" />


    <TextView
        android:id="@+id/repeatDate"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="bottom"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/default_date_in_item"
        android:textColor="@color/dark_grey"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/amount"
        app:layout_constraintTop_toTopOf="@+id/daysText" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="bottom|end"
        android:text="@string/default_amount_value"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/currency"
        app:layout_constraintTop_toTopOf="@+id/repeatDate" />

    <TextView
        android:id="@+id/currency"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:gravity="bottom|center_horizontal"
        android:layout_marginEnd="10dp"
        android:text="@string/polish_currency"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/amount" />

    <ImageView
        android:id="@+id/outOfDateIcon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_baseline_event_busy_24"
        app:layout_constraintBottom_toBottomOf="@+id/daysText"
        app:layout_constraintStart_toEndOf="@+id/daysText" />

</androidx.constraintlayout.widget.ConstraintLayout>