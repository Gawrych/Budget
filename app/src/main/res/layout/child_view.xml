<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="@color/grey"
    android:paddingStart="20dp">

    <TextView
        android:id="@+id/titleLayout"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:gravity="center_vertical|bottom"
        android:text="@string/default_item_title_value"
        android:textColor="#303030"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/amountLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/outOfDateIcon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/ic_baseline_event_busy_24"
        app:layout_constraintBottom_toBottomOf="@+id/remainingDays"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dateInfo"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:gravity="bottom"
        android:text="za"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/outOfDateIcon"
        app:layout_constraintTop_toBottomOf="@+id/titleLayout" />

    <TextView
        android:id="@+id/remainingDays"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:gravity="bottom"
        android:text="22"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/dateInfo"
        app:layout_constraintTop_toBottomOf="@+id/titleLayout" />

    <TextView
        android:id="@+id/daysText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="bottom"
        android:paddingStart="5dp"
        android:text="dni"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/remainingDays"
        app:layout_constraintTop_toTopOf="@+id/remainingDays" />

    <TextView
        android:id="@+id/dateIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="-"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/repeatDate"
        app:layout_constraintStart_toEndOf="@+id/daysText"
        app:layout_constraintTop_toTopOf="@+id/repeatDate" />

    <TextView
        android:id="@+id/repeatDate"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:gravity="bottom"
        android:paddingEnd="10dp"
        android:text="@string/default_date_in_item"
        android:textColor="@color/font_default"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/dateIcon"
        app:layout_constraintTop_toTopOf="@+id/daysText" />

    <TextView
        android:id="@+id/amountLayout"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="bottom|end"
        android:text="@string/default_amount_value"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/currency"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currency"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:gravity="bottom|center_horizontal"
        android:layout_marginEnd="10dp"
        android:text="@string/polish_currency"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/amountLayout" />




</androidx.constraintlayout.widget.ConstraintLayout>