<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.History.HistoryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sortingMarksConstraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/categoryFilterMarkIcon"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/icon"
            android:tag="ic_baseline_category_24"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/orderSortingMarkIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_category_24"
            app:tint="@color/light_grey" />

        <ImageView
            android:id="@+id/orderSortingMarkIcon"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/icon"
            android:tag="block"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/incomeStatementMarkIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/block"
            app:tint="@color/light_grey" />

        <ImageView
            android:id="@+id/incomeStatementMarkIcon"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:adjustViewBounds="true"
            android:background="@drawable/press_feedback_background"
            android:tag="profit_and_loss_"
            android:visibility="gone"
            android:contentDescription="@string/income_statement_content_desc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/reverseSortingMarkIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/profit_and_loss_icon"
            app:tint="@color/light_grey" />

        <ImageView
            android:id="@+id/reverseSortingMarkIcon"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/press_feedback_background"
            android:visibility="gone"
            android:contentDescription="@string/shadow_reverse_content_desc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/swap_down"
            app:tint="@color/light_grey" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_bar_for_item_list"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/categoryFilterButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:background="@drawable/press_feedback_background"
            android:contentDescription="@string/icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/orderFilterButton"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_category_24"
            app:tint="@color/main_green" />

        <ImageButton
            android:id="@+id/orderFilterButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:background="@drawable/press_feedback_background"
            android:contentDescription="@string/icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/addButton"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_filter_list_24"
            app:tint="@color/main_green" />

        <ImageButton
            android:id="@+id/addButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/add_button_content_desc"
            android:background="@drawable/press_feedback_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_add_24"
            app:tint="@color/main_green" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar_for_item_list" />

</androidx.constraintlayout.widget.ConstraintLayout>