<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Coming.AddNewComingElement"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/titleLayout"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    app:errorEnabled="true"
    android:hint="Tytuł"
    app:endIconMode="custom"
    app:endIconDrawable="@drawable/block_smaller_icon"
    app:endIconContentDescription="coinIcon">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textCapWords" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/amountLayout"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginTop="10dp"
    app:errorEnabled="true"
    app:endIconMode="custom"
    app:endIconDrawable="@drawable/dollar_coin_smaller_icon"
    app:endIconContentDescription="coinIcon">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="@string/amount"
        android:inputType="numberDecimal"
        app:backgroundTint="@color/main_blue" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/categorySelectorLayout"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginTop="10dp"
    android:hint="Kategoria"
    app:errorEnabled="true"
    app:endIconMode="custom"
    app:endIconDrawable="@drawable/ic_outline_widgets_24"
    app:endIconContentDescription="categoryIcon">

    <AutoCompleteTextView
        android:id="@+id/categorySelector"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:focusable="false"
        android:inputType="none"
        app:backgroundTint="@color/main_blue" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/startDateLayout"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginTop="10dp"
    app:errorEnabled="true"
    android:hint="Pierwsza płatność"
    app:endIconMode="custom"
    app:endIconDrawable="@drawable/calendar_smaller_icon"
    app:endIconContentDescription="calendarIcon">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/startDate"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:focusable="false"
        app:backgroundTint="@color/main_blue" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.switchmaterial.SwitchMaterial
    android:id="@+id/profitSwitch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Przychód"
    android:layout_marginTop="20dp"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp" />
</merge>