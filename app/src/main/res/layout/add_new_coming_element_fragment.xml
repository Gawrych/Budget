<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.Coming.AddNewComingElement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MaterialComponents.Light">

    <LinearLayout
        android:id="@+id/layoutInScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/titleLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:hint="Tytuł"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/block_smaller_icon"
            app:endIconContentDescription="coinIcon">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/amountLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/dollar_coin_smaller_icon"
            app:endIconContentDescription="coinIcon">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="@string/amount"
                android:inputType="numberDecimal"
                app:backgroundTint="@color/main_blue" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/categorySelectorLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:hint="Kategoria"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_outline_widgets_24"
            app:endIconContentDescription="categoryIcon">

            <AutoCompleteTextView
                android:id="@+id/categorySelector"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:focusable="false"
                android:inputType="none"
                app:backgroundTint="@color/main_blue" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dateLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:hint="Pierwsza płatność"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/calendar_smaller_icon"
            app:endIconContentDescription="calendarIcon">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:focusable="false"
                app:backgroundTint="@color/main_blue" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/endDateLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            app:endIconMode="custom"
            app:errorEnabled="true"
            app:endIconDrawable="@drawable/calendar_smaller_icon"
            app:endIconContentDescription="calendarIcon"
            android:hint="Do kiedy"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/endDate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:focusable="false"
                app:backgroundTint="@color/main_blue" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/timeBetweenPayLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:hint="Co ile"
            android:visibility="gone">

            <AutoCompleteTextView
                android:id="@+id/timeBetweenPay"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:focusable="false"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/isProfit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Przychód"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/isCyclical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:text="Transakcja cykliczna" />

        <Button
            android:id="@+id/acceptButton"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="200dp"
            android:padding="10dp"
            app:backgroundTint="@color/main_green"
            android:layout_marginBottom="70dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/add"
            android:textSize="20sp"
            android:layout_marginTop="40dp" />
    </LinearLayout>

</ScrollView>